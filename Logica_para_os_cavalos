#include <stdio.h>

int main() {
    // Definição das variáveis para cada movimento
    int movimentoTorre = 5;
    int movimentoBispo = 5;
    int movimentoRainha = 8;
    int movimentoCavaloBaixo = 2;
    int movimentoCavaloEsquerda = 1;

    printf("===== Movimentos do Xadrez =====\n\n");

    // ------------------------------
    // 1) Torre (usa for)
    // ------------------------------
    printf("Movimento da Torre:\n");
    for (int i = 1; i <= movimentoTorre; i++) {
        printf("Direita (casa %d)\n", i);
    }

    // ------------------------------
    // 2) Bispo (usa while)
    // ------------------------------
    printf("\nMovimento do Bispo:\n");
    int i = 1;
    while (i <= movimentoBispo) {
        printf("Cima, Direita (casa %d)\n", i);
        i++;
    }

    // ------------------------------
    // 3) Rainha (usa do-while)
    // ------------------------------
    printf("\nMovimento da Rainha:\n");
    int j = 1;
    do {
        printf("Esquerda (casa %d)\n", j);
        j++;
    } while (j <= movimentoRainha);

    // ------------------------------
    // 4) Cavalo (usa loops aninhados: for + while)
    // ------------------------------
    printf("\nMovimento do Cavalo:\n");

    // Primeiro: duas casas para baixo (com for)
    for (int k = 1; k <= movimentoCavaloBaixo; k++) {
        printf("Baixo (casa %d)\n", k);
    }

    // Depois: uma casa para a esquerda (com while)
    int l = 1;
    while (l <= movimentoCavaloEsquerda) {
        printf("Esquerda (casa final)\n");
        l++;
    }

    return 0;
}
