#include <stdio.h>

int main() {
    // Definição das variáveis (número de casas que cada peça vai andar)
    int movimentoTorre = 5;
    int movimentoBispo = 5;
    int movimentoRainha = 8;

    printf("===== Movimentos do Xadrez =====\n\n");

    // ------------------------------
    // 1) Torre (usa for)
    // Move 5 casas para a direita
    // ------------------------------
    printf("Movimento da Torre:\n");
    for (int i = 1; i <= movimentoTorre; i++) {
        printf("Direita (casa %d)\n", i);
    }

    // ------------------------------
    // 2) Bispo (usa while)
    // Move 5 casas na diagonal (cima + direita)
    // ------------------------------
    printf("\nMovimento do Bispo:\n");
    int i = 1;
    while (i <= movimentoBispo) {
        printf("Cima, Direita (casa %d)\n", i);
        i++;
    }

    // ------------------------------
    // 3) Rainha (usa do-while)
    // Move 8 casas para a esquerda
    // ------------------------------
    printf("\nMovimento da Rainha:\n");
    int j = 1;
    do {
        printf("Esquerda (casa %d)\n", j);
        j++;
    } while (j <= movimentoRainha);

    return 0;
}
